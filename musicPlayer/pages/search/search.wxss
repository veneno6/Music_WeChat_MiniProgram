/*头部搜索区域*/
.searchContainer {
    padding: 0 20rpx;
}
.header {
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
}

.searchInput {
    position: relative;
    flex: 1;
    background: rgba(237, 237, 237 ,0.3);
    border-radius: 30rpx;
}
.clear {
    position: relative;
    right: 30rpx;
    z-index: 10;
    font-size: 30rpx;
}
.cancel {
    width: 100rpx;
    text-align: center;
}

.searchIcon {
    position: absolute;
    left: 15rpx;
}

.searchInput input {
    margin-left: 50rpx;
    height: 60rpx;
}

.placeholder {
    font-size: 28rpx;
}

/*热搜榜区域*/
.hotContainer {
}
.hotContainer .title {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #eee;
}

.hotList {
    display: flex;
    flex-wrap: wrap;
}

.hotItem {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}

.hotItem .order {
    margin: 0 10rpx;
}

.hotItem .iconTag {
    width: 35rpx;
    height: 20rpx;
    margin-left: 10px;
}

/*搜索内容展示*/
.searchContent {
    color: #d34e33;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1px solid #d34e33;
}

.searchItem {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}

.searchItem .content {
    flex: 1;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #eee;
}

/*搜索历史记录*/
.history {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    line-height: 50rpx;
    margin: 20rpx 0;
}

.history .title {
    font-size: 28rpx;
    height: 50rpx;
}

.history .historyItem {
    font-size: 26rpx;
    background: #ededed;
    height: 50rpx;
    margin-left: 20rpx;
    padding: 0 20rpx;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
}

.history .delete {
    position: absolute;
    right: 15rpx;
    font-size: 36rpx;
    bottom: 10rpx;

}




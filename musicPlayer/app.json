{
  "pages": [
    "pages/index/index",
    "pages/search/search",
    "pages/video/video",
    "pages/login/login",
    "pages/personal/personal"
  ],
  "subpackages": [
    {
      "root": "otherPackage",
      "name": "other",
      "pages": [
        "pages/other/other"
      ]
    },
    {
      "root": "songPackage",
      "pages": [
        "pages/songDetail/songDetail",
        "pages/recommendSong/recommendSong"
      ],
      "independent": true
    }
  ],
  "preloadRule": {
    "pages/index/index": {
      "network": "all",
      "packages": ["songPackage", "other"]
    }
  },
  "window": {
    "navigationBarBackgroundColor": "#d43c33",
    "navigationBarTitleText": "音乐播放器",
    "navigationBarTextStyle": "white"
  },
  "style": "v2",
  "sitemapLocation": "sitemap.json",
  "requiredBackgroundModes": [
    "audio",
    "location"
  ],
  "tabBar": {
    "color": "#333",
    "selectedColor": "#d43c33",
    "backgroundColor": "#fff",
    "list": [
      {
        "pagePath": "pages/index/index",
